let charIndex = 0;

// Ø¹Ø±Ø¶ Ø§Ù„Ø±Ø³Ø§Ù„Ø©
function showMessage() {
    document.getElementById("intro").style.display = "none";
    document.getElementById("message").style.display = "block";
    document.getElementById("title").style.display = "block"; // ÙŠØ¸Ù‡Ø± Ø§Ù„Ø¹Ù†ÙˆØ§Ù† ÙÙˆÙ‚ Ø§Ù„Ø±Ø³Ø§Ù„Ø©
    document.getElementById("music").play();
    lineIndex = 0;
    charIndex = 0;
    typeLine();
    setInterval(createHeart, 300);
}

// ÙƒØªØ§Ø¨Ø© ØªØ¯Ø±ÙŠØ¬ÙŠØ©
function typeLine() {
    const textDiv = document.getElementById("text");
    if (lineIndex >= lines.length) {
        document.getElementById("fireButton").style.display = "inline-block"; // ÙŠØ¸Ù‡Ø± Ø²Ø±Ø§Ø± Ø§Ù„Ø£Ù„Ø¹Ø§Ø¨ Ø§Ù„Ù†Ø§Ø±ÙŠØ© Ø¨Ø¹Ø¯ Ø§Ù„Ø±Ø³Ø§Ù„Ø©
        return;
    }
    if (charIndex < lines[lineIndex].length) {
        textDiv.innerHTML += lines[lineIndex].charAt(charIndex);
        charIndex++;
        textDiv.scrollTop = textDiv.scrollHeight;
        setTimeout(typeLine, 40);
    } else {
        textDiv.innerHTML += "<br>";
        charIndex = 0;
        lineIndex++;
        setTimeout(typeLine, 400);
    }
}

// Ø§Ù„Ù‚Ù„ÙˆØ¨
function createHeart() {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerHTML = "ğŸ’–";
    heart.style.left = Math.random() * window.innerWidth + "px";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 6000);
}

// Ø§Ù„Ø£Ù„Ø¹Ø§Ø¨ Ø§Ù„Ù†Ø§Ø±ÙŠØ© Ø¹Ù„Ù‰ ÙƒØ§Ù…Ù„ Ø§Ù„Ø´Ø§Ø´Ø© ÙˆØ£ÙƒØ«Ø± Ø¹Ø¯Ø¯
function showFireworks() {
    const canvas = document.getElementById("fireworksCanvas");
    canvas.style.display = "block";
    const ctx = canvas.getContext("2d");
    const width = canvas.width = window.innerWidth;
    const height = canvas.height = window.innerHeight;

    const particles = [];
    const colors = ['#ff0040', '#ff8000', '#ffff00', '#00ff80', '#00ffff', '#0080ff', '#8000ff', '#ff00ff', '#ff6666', '#66ff66'];

    function createExplosion(x, y) {
        for (let i = 0; i < 200; i++) { // Ø²Ø¯Ù†Ø§ Ø§Ù„Ø¹Ø¯Ø¯
            particles.push({
                x: x,
                y: y,
                dx: (Math.random() - 0.5) * 12, // Ø³Ø±Ø¹Ø§Øª Ø£ÙƒØ¨Ø±
                dy: (Math.random() - 0.5) * 12,
                color: colors[Math.floor(Math.random() * colors.length)],
                alpha: 1
            });
        }
    }

    function animate() {
        ctx.clearRect(0, 0, width, height); // Ø®Ù„ÙÙŠØ© Ø´ÙØ§ÙØ©
        for (let i = 0; i < particles.length; i++) {
            const p = particles[i];
            p.x += p.dx;
            p.y += p.dy;
            p.alpha -= 0.004; // Ø£Ø·ÙˆÙ„ Ø­Ø±ÙƒØ©
            if (p.alpha <= 0) {
                particles.splice(i, 1);
                i--;
                continue;
            }
            ctx.fillStyle = p.color;
            ctx.globalAlpha = p.alpha;
            ctx.beginPath();
            ctx.arc(p.x, p.y, 3, 0, Math.PI*2);
            ctx.fill();
        }
        ctx.globalAlpha = 1;
        requestAnimationFrame(animate);
    }

    canvas.addEventListener('click', (e) => createExplosion(e.clientX, e.clientY));
    createExplosion(width/2, height/2); // Ø£ÙˆÙ„ Ø§Ù†ÙØ¬Ø§Ø± ØªÙ„Ù‚Ø§Ø¦ÙŠ
    animate();

    // ØªØ´ØºÙŠÙ„ ØµÙˆØª Ø§Ù„Ø£Ù„Ø¹Ø§Ø¨ Ø§Ù„Ù†Ø§Ø±ÙŠØ©
    const fireSound = document.getElementById("fireworkSound");
    fireSound.play();
}
